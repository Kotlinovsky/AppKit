    <declare-styleable name="CodeEditText">
        <attr name="codeLength" format="integer" />
    </declare-styleable>

    <attr name="badgeViewStyle" format="reference" />
    <attr name="planetViewStyle" format="reference" />
    <attr name="codeEditTextStyle" format="reference" />
</resources>